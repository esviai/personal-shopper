<!DOCTYPE html>
<html lang="en">

  <head>
    <% include ./partials/header.ejs %>
    <title>Items | Personal Shopper</title>
  </head>

  <body>
    <% include ./partials/navbarCust.ejs %>
    <br/>
    <br/>
    <div class="container">
      <div class="row">
        <% items.forEach(item => { %>
        <div class="col s4">
          <div class="card large sticky-action">
            <div class="card-image waves-effect waves-block waves-light">
              <img class="activator" src="<%- item.image %>">
            </div>
            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4">
                <%- item.name ? item.name : `Item ${item.id}` %> 
                <i class="material-icons right">more_vert</i></span>
              <p>Kategori: <%- item.category? item.category : "" %> </p>
            </div>
            <div class="card-action center">
              <% if (item.stock === 0) { %>
              <p><a href="/c/buyitem/<%-item.id%>" class="btn-large disabled">Buy</a></p>
              <% } else { %>
              <p><a href="/c/buyitem/<%-item.id%>" class="btn-large">Buy</a></p>
              <% } %>
            </div>
            <div class="card-reveal">
              <span class="card-title grey-text text-darken-4">
                <%- item.name ? item.name : `Item ${item.id}` %>
                <i class="material-icons right">close</i></span>
              <p><%- item.category ? item.category : `` %></p>
              <p><%- item.description ? item.description : `` %></p>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <!-- jQuery -->
    <script type="text/javascript">
    </script>
  </body>

</html>
